<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:layout_editor_absoluteY="81dp">

    <TextView
        android:id="@+id/list_item_podcast_time_text_view"
        android:layout_width="216dp"
        android:layout_height="17dp"
        android:fontFamily="sans-serif"
        android:textAlignment="viewStart"
        android:textSize="8sp"
        android:textStyle="italic"
        app:layout_constraintStart_toStartOf="@+id/list_item_podcast_title_text_view"
        app:layout_constraintTop_toBottomOf="@+id/list_item_podcast_title_text_view"
        tools:text="Free Associations Podcast | October 9th, 2018"/>

    <TextView
        android:id="@+id/list_item_podcast_title_text_view"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:fontFamily="serif"
        android:textColor="@android:color/holo_orange_light"
        android:textSize="10sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/list_item_poadcast_image_view"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="The sleep episode: melatonin for a sleep disorder"/>

    <ImageButton
        android:id="@+id/list_item_podcast_download_image_button"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:background="@android:color/transparent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/list_item_podcast_detail_button"
        app:layout_constraintTop_toBottomOf="@+id/list_item_podcast_detail_button"
        app:srcCompat="@drawable/download_done_button"/>

    <ImageView
        android:id="@+id/list_item_poadcast_image_view"
        android:layout_width="50dp"
        android:layout_height="60dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.04"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:color/white"/>

    <ProgressBar
        android:id="@+id/list_item_podcast_download_progress_bar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="309dp"
        android:layout_height="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        app:layout_constraintEnd_toEndOf="@+id/list_item_podcast_detail_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/list_item_podcast_download_image_button"/>

    <Button
        android:id="@+id/list_item_podcast_detail_button"
        android:layout_width="47dp"
        android:layout_height="28dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="4dp"
        android:text="More"
        android:textSize="7sp"
        app:layout_constraintStart_toEndOf="@+id/list_item_podcast_title_text_view"
        app:layout_constraintTop_toTopOf="parent"/>

</android.support.constraint.ConstraintLayout>