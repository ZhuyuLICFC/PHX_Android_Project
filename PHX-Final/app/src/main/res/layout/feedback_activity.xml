<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:layout_editor_absoluteY="25dp">

    <TextView
        android:id="@+id/question_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/adamina"
        android:gravity="center"
        android:text="@string/feedback_question"
        android:textColor="@android:color/black"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/question_edit_text"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/question_edit_text" />

    <TextView
        android:id="@+id/organization_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/adamina"
        android:gravity="center"
        android:text="@string/feedback_organization"
        android:textColor="@android:color/black"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/question_text_view"
        app:layout_constraintTop_toTopOf="@+id/organization_edit_text" />

    <TextView
        android:id="@+id/email_text_view"
        android:layout_width="46dp"
        android:layout_height="27dp"
        android:fontFamily="@font/adamina"
        android:gravity="center"
        android:text="@string/feedback_email"
        android:textColor="@android:color/black"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/question_text_view"
        app:layout_constraintTop_toTopOf="@+id/email_edit_text" />

    <TextView
        android:id="@+id/name_text_view"
        android:layout_width="46dp"
        android:layout_height="27dp"
        android:fontFamily="@font/adamina"
        android:gravity="center"
        android:text="@string/feedback_name"
        android:textColor="@android:color/black"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/question_text_view"
        app:layout_constraintTop_toTopOf="@+id/name_edit_text" />

    <Button
        android:id="@+id/submit_button"
        android:layout_width="152dp"
        android:layout_height="39dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:text="@string/feedback_submit"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/question_edit_text" />

    <TextView
        android:id="@+id/contact_us_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:fontFamily="@font/abril_fatface"
        android:gravity="center"
        android:text="@string/feedback_title"
        android:textColor="@android:color/background_dark"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/name_edit_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="spread" />

    <EditText
        android:id="@+id/name_edit_text"
        android:layout_width="154dp"
        android:layout_height="31dp"
        android:ems="10"
        android:hint="@string/feedback_hint_name"
        android:inputType="text"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textSize="12sp"
        android:background="@null"
        app:layout_constraintBottom_toTopOf="@+id/email_edit_text"
        app:layout_constraintStart_toStartOf="@+id/question_edit_text"
        app:layout_constraintTop_toBottomOf="@+id/contact_us_text_view" />

    <EditText
        android:id="@+id/organization_edit_text"
        android:layout_width="219dp"
        android:layout_height="31dp"
        android:ems="10"
        android:hint="@string/feedback_hint_organization"
        android:inputType="text"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textSize="12sp"
        android:background="@null"
        app:layout_constraintBottom_toTopOf="@+id/question_edit_text"
        app:layout_constraintStart_toStartOf="@+id/question_edit_text"
        app:layout_constraintTop_toBottomOf="@+id/email_edit_text" />

    <EditText
        android:id="@+id/email_edit_text"
        android:layout_width="219dp"
        android:layout_height="32dp"
        android:ems="10"
        android:hint="@string/feedback_hint_email"
        android:background="@null"
        android:inputType="textEmailAddress"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@+id/organization_edit_text"
        app:layout_constraintStart_toStartOf="@+id/question_edit_text"
        app:layout_constraintTop_toBottomOf="@+id/name_edit_text" />

    <EditText
        android:id="@+id/question_edit_text"
        android:layout_width="232dp"
        android:layout_height="176dp"
        android:background="@null"
        android:textSize="12sp"
        android:ems="10"
        android:hint="@string/feedback_hint_feedback"
        app:layout_constraintBottom_toTopOf="@+id/submit_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/question_text_view"
        app:layout_constraintTop_toBottomOf="@+id/organization_edit_text" />

</android.support.constraint.ConstraintLayout>